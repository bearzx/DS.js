{
  "width": 400,
  "height": 400,
  "data": [
    {
      "name": "gdp",
      "url": "src/gdp.csv",
      "format": {
        "type": "csv",
        "parse": {
          "agriculture_2010": "number",
          "industry_2010": "number"
        }
      }
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "domain": {
        "data": "gdp",
        "field": ["agriculture_2010", "industry_2010"]
      },
      "range": "width",
      "nice": true
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {
        "data": "gdp",
        "field": ["agriculture_2010", "industry_2010"]
      },
      "range": "height",
      "nice": true
    }
  ],
  "axes": [
    {
      "type": "x",
      "scale": "xscale",
      "orient": "bottom",
      "title": "Agriculture as a percentage of GDP (2010)"
    },
    {
      "type": "y",
      "scale": "yscale",
      "orient": "left",
      "title": "Industry as a percentage of GDP (2010)"
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "gdp"
      },
      "properties": {
        "enter": {
          "x": {
            "field": "agriculture_2010",
            "scale": "xscale"
          },
          "y": {
            "field": "industry_2010",
            "scale": "yscale"
          },
          "size": {"value": 49},
          "fill": {"value": "#3182bd"},
          "opacity": {"value": 0.7}
        },
        "update": {
          "fill": {"value": "#3182bd"}
        },
        "hover": {
          "fill": {"value": "#de2d26"}
        }
      }
    },
    {
      "type": "text",
      "properties": {
        "enter": {
          "fill": {"value": "black"}
        },
        "update": {
          "x": {
            "scale": "xscale",
            "signal": "hover.agriculture_2010",
            "offset": 5
          },
          "y": {
            "scale": "yscale",
            "signal": "hover.industry_2010",
            "offset": -5
          },
          "text": {"signal": "hover.country_name"}
        }
      }
    }
  ],
  "signals": [
    {
      "name": "hover",
      "init": {},
      "streams": [
        {"type": "symbol:mouseover", "expr": "datum"},
        {"type": "symbol:mouseout", "expr": "{}"}
      ]
    }
  ]
}